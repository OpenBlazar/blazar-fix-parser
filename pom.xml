    <name>Fix Parser Message</name>
    <description>Fix Message Parsing component for Fix Parser</description>
    <url>https://github.com/OpenBlazar/fix-parser.git</url>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>WojciechZankowski</id>
            <name>Wojciech Zankowski</name>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/OpenBlazar/fix-parser.git</connection>
        <developerConnection>scm:git:git@github.com:OpenBlazar/fix-parser.git
        </developerConnection>
        <url>https://github.com/OpenBlazar/fix-parser.git</url>
        <tag>master</tag>
    </scm>

    <properties>
        <bfp.version>1.0</bfp.version>

        <javax.el>3.0.0</javax.el>
        <javax.servlet.api>4.0.1</javax.servlet.api>
        <jstl>1.2</jstl>
        <primefaces>6.0</primefaces>
        <primefaces.bootstrap>1.0.10</primefaces.bootstrap>
        <version.picketlink.javaee.bom>2.7.1.Final</version.picketlink.javaee.bom>
        <taglibs.standard>1.2.5</taglibs.standard>

        <mybatis>3.4.6</mybatis>
        <mybatis.guice>3.10</mybatis.guice>
        <mariadb.java.client>1.5.8</mariadb.java.client>
        <commons.dbcp>1.4</commons.dbcp>

        <guice>4.2.1</guice>
        <shiro>1.3.2</shiro>
        <log4j>2.8.1</log4j>
        <junit>4.12</junit>
        <dockerfile-maven-version>1.4.7</dockerfile-maven-version>
    </properties>

    <modules>
        <module>fix-parser-app</module>
        <module>fix-parser-web</module>
        <module>fix-parser-core</module>
        <module>fix-parser-messages-client</module>
        <module>fix-parser-user-client</module>
        <module>fix-parser-auth-client</module>
    </modules>

    <dependencyManagement>
        <dependencies>

            <!-- projects -->

            <dependency>
                <groupId>pl.zankowski.fixparser</groupId>
                <artifactId>auth-api</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>pl.zankowski.fixparser</groupId>
                <artifactId>user-api</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>pl.zankowski.fixparser</groupId>
                <artifactId>messages-api</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>pl.zankowski</groupId>
                <artifactId>fix-parser-auth-client</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>pl.zankowski</groupId>
                <artifactId>fix-parser-messages-client</artifactId>
                <version>1.0.0-SNAPSHOT</version>
            </dependency>

            <dependency>
                <groupId>pl.zankowski</groupId>
                <artifactId>fix-parser-user-client</artifactId>
